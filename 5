#include <iostream>
using namespace std;
int find_max(int* mas, int size)
{
    int max = mas[0];
    for (int i = 1; i < size; i++)
    {
        if (mas[i] > max) max = mas[i];
    }
    return(max);
}
int find_min(int* mas, int size)
{
    int min = 0;
    for (int i = 1; i < size; i++)
    {
        if (mas[i] < mas[min]) min = i;
    }
    return(min);
}
int find_max(int* mas, int size);
int find_min(int* mas, int size);
int main()
{
    const int n = 4;
    const int m = 5;
    int mas[n][m];
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            mas[i][j] = rand() % 10;
            cout << mas[i][j] << " ";
        }
        cout << endl;
    }
    for (int i = n - 1; i >= 1; i--)
    {
        int t;
        t = find_min(mas[i], m);
        mas[i][t] = find_max(mas[i - 1], m);
    }
    cout << endl;
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cout << mas[i][j] << " ";
        }
        cout << endl;
    }
}
